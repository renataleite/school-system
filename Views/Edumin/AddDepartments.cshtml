@{
	Layout = "~/Views/Shared/_LayoutEdumin.cshtml";
	ViewData["Title"] = "<<Put your different title string value here for each page>>";
}
<div class="content-body">
	<!-- row -->
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Adicionar Escola</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">

					<li class="breadcrumb-item"><a href="javascript:void(0);">Escolas</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0);">Adicionar Escola</a></li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-xl-12 col-xxl-12 col-sm-12">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Adicionar Escola</h5>
					</div>
					<div class="card-body">
						<form action="@Url.Action("Add", "School")" method="post" enctype="multipart/form-data">
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<label for="Department_Name" class="form-label">Nome da Escola</label>
										<input id="Department_Name" name="Name" placeholder="Nome da Escola" type="text" class="form-control" required>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<label for="School_Logo" class="form-label">Logo da Escola</label>
										<input id="School_Logo" name="LogoFile" type="file" class="form-control" required>
									</div>
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12">
									<button type="submit" class="btn btn-primary">Salvar</button>
									<button type="button" class="btn btn-danger light" onclick="window.history.back();">Cancelar</button>
								</div>
							</div>
						</form>

					</div>

				</div>
			</div>
		</div>
	</div>
</div>

@section Edumin_style
{
	<link rel="stylesheet" href="~/edumin/vendor/pickadate/themes/default.css">
	<link rel="stylesheet" href="~/edumin/vendor/pickadate/themes/default.date.css">
}

